@model IEnumerable<QUANLYDICHVUDULICH.ADMIN.Models.TinTucViewModel>

@{
    ViewBag.Title = "Quản lý Bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    /* --- STYLE CHUNG --- */
    body {
        background-color: #f5f7fa;
    }

    .page-header-block {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .page-subtitle {
        color: #6c757d;
        font-size: 14px;
        margin-top: 5px;
    }

    /* Card & Table */
    .content-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        padding: 20px;
    }

    .custom-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .custom-table th {
            text-transform: uppercase;
            font-size: 12px;
            color: #adb5bd;
            font-weight: 600;
            padding: 15px;
            border-bottom: 1px solid #edf2f7;
            text-align: left;
        }

        .custom-table td {
            padding: 15px;
            vertical-align: middle;
            border-bottom: 1px solid #edf2f7;
            color: #343a40;
            font-size: 14px;
        }

    /* Badges */
    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

    .status-published {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    .status-draft {
        background-color: #fff3cd;
        color: #664d03;
    }

    .status-pending {
        background-color: #cff4fc;
        color: #055160;
    }

    .status-hidden {
        background-color: #f8d7da;
        color: #842029;
    }

    /* Action Buttons */
    .action-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        margin-left: 5px;
        border: 1px solid transparent;
        color: #6c757d;
        background: #f8f9fa;
        transition: 0.2s;
        text-decoration: none;
        cursor: pointer;
    }

        .action-btn:hover {
            background: #e9ecef;
        }

    .btn-view {
        color: #0dcaf0;
        border-color: #0dcaf0;
        background: white;
    }

        .btn-view:hover {
            background: #0dcaf0;
            color: white;
        }

    .btn-edit {
        color: #0d6efd;
        border-color: #0d6efd;
        background: white;
    }

        .btn-edit:hover {
            background: #0d6efd;
            color: white;
        }

    .btn-delete {
        color: #dc3545;
        border-color: #dc3545;
        background: white;
    }

        .btn-delete:hover {
            background: #dc3545;
            color: white;
        }

    .post-title {
        font-weight: 600;
        color: #212529;
        max-width: 300px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Modal Content */
    .modal-post-img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 15px;
    }

    .post-meta {
        font-size: 13px;
        color: #6c757d;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 1px solid #eee;
    }

    .post-content {
        font-size: 15px;
        line-height: 1.6;
        color: #333;
        min-height: 100px;
    }
</style>

<div class="page-header-block">
    <div>
        <p class="page-subtitle">Danh sách tin tức, blog du lịch và khuyến mãi.</p>
    </div>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fas fa-plus"></i> Thêm bài viết
    </a>
</div>

<div class="content-card">

    <div class="d-flex justify-content-end mb-3">
        @using (Html.BeginForm("Index", "TinTuc", FormMethod.Get, new { id = "filterForm" }))
        {
            <input type="hidden" name="searchString" value="@Request.QueryString["searchString"]" />

            <select name="category" class="form-select form-select-sm w-auto" onchange="document.getElementById('filterForm').submit()">
                <option value="">-- Tất cả danh mục --</option>
                <option value="Tin tức" @(Request.QueryString["category"] == "Tin tức" ? "selected" : "")>Tin tức</option>
                <option value="Khuyến mãi" @(Request.QueryString["category"] == "Khuyến mãi" ? "selected" : "")>Khuyến mãi</option>
                <option value="Kinh nghiệm" @(Request.QueryString["category"] == "Kinh nghiệm" ? "selected" : "")>Kinh nghiệm du lịch</option>
            </select>
        }
    </div>

    <table class="custom-table">
        <thead>
            <tr>
                <th style="width: 40px;"><input type="checkbox"></th>
                <th>Tiêu đề bài viết</th>
                <th>Danh mục</th>
                <th>Tác giả</th>
                <th>Ngày đăng</th>
                <th>Trạng thái</th>
                <th style="text-align: right; width: 160px;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td><input type="checkbox"></td>
                        <td>
                            <div class="post-title" title="@item.TieuDe">@item.TieuDe</div>
                        </td>
                        <td>@item.DanhMuc</td>
                        <td><i class="far fa-user-circle"></i> @item.TacGia</td>
                        <td>@String.Format("{0:dd/MM/yyyy}", item.NgayDang)</td>
                        <td>
                            @if (item.TrangThai == "Đã xuất bản" || item.TrangThai == "Hiện" || item.TrangThai == "Đăng")
                            {<span class="status-badge status-published">@item.TrangThai</span> }
                        else if (item.TrangThai == "Bản nháp")
                        { <span class="status-badge status-draft">@item.TrangThai</span> }
                    else if (item.TrangThai == "Ẩn")
                    { <span class="status-badge status-hidden">@item.TrangThai</span> }
                else
                { <span class="status-badge status-pending">@item.TrangThai</span>}
                        </td>
                        <td style="text-align: right;">
                            <button class="action-btn btn-view" title="Xem chi tiết" onclick="viewDetails(@item.MaTin)">
                                <i class="fas fa-eye"></i>
                            </button>

                            <a href="@Url.Action("Edit", new { id = item.MaTin })" class="action-btn btn-edit" title="Sửa">
                                <i class="fas fa-pen"></i>
                            </a>

                            <button type="button" class="action-btn btn-delete" title="Xóa" onclick="deleteTinTuc(@item.MaTin)">
                                <i class="far fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="7" style="text-align:center; padding: 30px; color: #999;">Không tìm thấy bài viết nào.</td></tr>
            }
        </tbody>
    </table>

    <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 20px; color: #6c757d; font-size: 14px;">
        <div>Hiển thị @(Model != null ? Model.Count() : 0) kết quả</div>
    </div>
</div>

<div class="modal fade" id="newsDetailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold"><i class="fas fa-newspaper text-primary"></i> Chi tiết bài viết</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <img id="viewHinhAnh" src="" class="modal-post-img" onerror="this.src='https://placehold.co/800x400?text=No+Image'">

                <h3 id="viewTieuDe" class="fw-bold mb-3 text-primary"></h3>

                <div class="post-meta">
                    <span class="me-3"><i class="fas fa-folder text-warning"></i> <span id="viewDanhMuc"></span></span>
                    <span class="me-3"><i class="fas fa-user text-info"></i> <span id="viewTacGia"></span></span>
                    <span class="me-3"><i class="far fa-calendar-alt text-success"></i> <span id="viewNgayDang"></span></span>
                    <span><i class="fas fa-tag"></i> <span id="viewTrangThai" class="badge bg-secondary"></span></span>
                </div>

                <div class="alert alert-light border mb-3">
                    <strong>Tóm tắt:</strong> <span id="viewTomTat" class="text-muted fst-italic"></span>
                </div>

                <div id="viewNoiDung" class="post-content"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // 1. HÀM XEM CHI TIẾT (Mới thêm)
        function viewDetails(id) {
            Swal.fire({ title: 'Đang tải...', didOpen: () => Swal.showLoading() });

            // Để dùng được hàm này, bạn CẦN THÊM hàm GetJsonTinTuc vào TinTucController
            // Hoặc gọi trực tiếp API nếu không qua Controller
            // Ở đây tôi giả định bạn sẽ thêm hàm GetJsonTinTuc vào TinTucController (giống TourController)
            $.get('/TinTuc/GetJsonTinTuc?id=' + id, function (data) {
                Swal.close();
                if (data) {
                    $('#viewTieuDe').text(data.TieuDe);
                    $('#viewDanhMuc').text(data.DanhMuc);
                    $('#viewTacGia').text(data.TacGia);
                    $('#viewTomTat').text(data.TomTat || 'Không có tóm tắt');

                    // Hiển thị nội dung HTML an toàn
                    $('#viewNoiDung').html(data.NoiDung || '<p class="text-center text-muted">Chưa có nội dung chi tiết.</p>');

                    $('#viewTrangThai').text(data.TrangThai);
                    if(data.TrangThai === 'Đăng' || data.TrangThai === 'Hiện')
                        $('#viewTrangThai').removeClass().addClass('badge bg-success');
                    else
                        $('#viewTrangThai').removeClass().addClass('badge bg-secondary');

                    // Xử lý ngày tháng
                    if (data.NgayDang) {
                        var date = new Date(data.NgayDang);
                        if (!isNaN(date.getTime())) {
                            $('#viewNgayDang').text(date.toLocaleDateString('vi-VN'));
                        } else {
                             $('#viewNgayDang').text('...');
                        }
                    }

                    // Xử lý ảnh
                    var imgSrc = data.HinhAnh ? data.HinhAnh : 'https://placehold.co/800x400?text=No+Image';
                    $('#viewHinhAnh').attr('src', imgSrc);

                    var myModal = new bootstrap.Modal(document.getElementById('newsDetailModal'));
                    myModal.show();
                } else {
                    Swal.fire('Lỗi', 'Không tìm thấy dữ liệu bài viết.', 'error');
                }
            }).fail(function() {
                Swal.fire('Lỗi', 'Mất kết nối với máy chủ.', 'error');
            });
        }

        // 2. HÀM XÓA TIN TỨC
        function deleteTinTuc(id) {
            Swal.fire({
                title: 'Xóa bài viết này?',
                text: "Dữ liệu sẽ bị xóa vĩnh viễn!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Xóa ngay',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({ title: 'Đang xử lý...', didOpen: () => { Swal.showLoading() } });

                    $.post('@Url.Action("Delete", "TinTuc")', { id: id })
                        .done(function (res) {
                            if (res.success) {
                                Swal.fire('Đã xóa!', 'Bài viết đã được xóa thành công.', 'success')
                                    .then(() => { location.reload(); });
                            } else {
                                Swal.fire('Lỗi', res.message || 'Không thể xóa.', 'error');
                            }
                        })
                        .fail(function (xhr) {
                            console.error(xhr);
                            Swal.fire('Lỗi Server', 'Không thể kết nối đến máy chủ.', 'error');
                        });
                }
            })
        }
    </script>
}