@model QUANLYDICHVUDULICH.ADMIN.Models.TinTucViewModel
@{
    ViewBag.Title = "Thêm bài viết mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --success-gradient: linear-gradient(135deg, #10b981 0%, #059669 100%);
        --primary-color: #4f46e5;
        --success-color: #10b981;
    }

    .page-header-custom {
        background: white;
        border-radius: 16px;
        padding: 25px 35px;
        margin-bottom: 25px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

        .page-header-custom h3 {
            margin: 0;
            color: #1e293b;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .page-header-custom h3 i {
                color: var(--primary-color);
                font-size: 28px;
            }

    .breadcrumb-custom {
        background: transparent;
        padding: 0;
        margin: 8px 0 0 0;
        font-size: 14px;
    }

    .content-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .form-section {
        padding: 35px;
    }

    .sidebar-section {
        background: #f8fafc;
        padding: 35px;
        border-left: 1px solid #e2e8f0;
        min-height: 100%;
    }

    .section-title {
        font-size: 18px;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 25px;
        padding-bottom: 12px;
        border-bottom: 3px solid var(--primary-color);
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .section-title i {
            color: var(--primary-color);
        }

    .form-label-custom {
        font-weight: 600;
        color: #334155;
        margin-bottom: 8px;
        font-size: 14px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-control-custom, .form-select-custom {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 12px 16px;
        transition: all 0.3s;
        font-size: 15px;
    }

        .form-control-custom:focus, .form-select-custom:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
            outline: none;
        }

        .form-control-custom::placeholder {
            color: #94a3b8;
        }

    textarea.form-control-custom {
        resize: vertical;
        min-height: 120px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    #NoiDung {
        min-height: 350px;
        font-family: 'Courier New', monospace;
    }

    .char-counter {
        font-size: 12px;
        color: #94a3b8;
        text-align: right;
        margin-top: 5px;
    }

    .info-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        border: 1px solid #e2e8f0;
    }

        .info-card h6 {
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 15px;
        }

            .info-card h6 i {
                color: var(--primary-color);
            }

    .preview-box {
        background: white;
        border: 2px dashed #cbd5e1;
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        min-height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
        margin-bottom: 15px;
    }

        .preview-box:hover {
            border-color: var(--primary-color);
            background: #f0f9ff;
        }

        .preview-box img {
            max-width: 100%;
            max-height: 180px;
            border-radius: 8px;
            object-fit: cover;
        }

    .preview-placeholder {
        color: #94a3b8;
    }

        .preview-placeholder i {
            font-size: 48px;
            display: block;
            margin-bottom: 10px;
        }

    .btn-custom {
        border: none;
        padding: 14px 28px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 15px;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        width: 100%;
        text-decoration: none;
    }

    .btn-success-custom {
        background: var(--success-gradient);
        color: white;
    }

        .btn-success-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(16, 185, 129, 0.3);
            color: white;
        }

    .btn-primary-custom {
        background: var(--primary-gradient);
        color: white;
    }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(79, 70, 229, 0.3);
            color: white;
        }

    .btn-secondary-custom {
        background: white;
        color: #64748b;
        border: 2px solid #e2e8f0;
    }

        .btn-secondary-custom:hover {
            background: #f8fafc;
            border-color: #cbd5e1;
            color: #475569;
        }

    .status-badge {
        display: inline-block;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
        margin: 5px 5px 5px 0;
    }

    .badge-draft {
        background: #fef3c7;
        color: #92400e;
    }

    .badge-published {
        background: #d1fae5;
        color: #065f46;
    }

    .tips-box {
        background: #fef3c7;
        border-left: 4px solid #f59e0b;
        padding: 15px;
        border-radius: 8px;
        margin-top: 20px;
    }

        .tips-box h6 {
            color: #92400e;
            font-weight: 600;
            margin-bottom: 10px;
            font-size: 14px;
        }

        .tips-box ul {
            margin: 0;
            padding-left: 20px;
            color: #78350f;
        }

        .tips-box li {
            margin-bottom: 5px;
            font-size: 13px;
        }

    .tips-box {
        background: #fef3c7;
        border-left: 4px solid #f59e0b;
        padding: 15px;
        border-radius: 8px;
        margin-top: 20px;
    }

        .tips-box h6 {
            color: #92400e;
            font-weight: 600;
            margin-bottom: 10px;
            font-size: 14px;
        }

        .tips-box ul {
            margin: 0;
            padding-left: 20px;
            color: #78350f;
        }

        .tips-box li {
            margin-bottom: 5px;
            font-size: 13px;
        }

    .editor-toolbar {
        background: #f8fafc;
        padding: 10px 15px;
        border-radius: 10px 10px 0 0;
        border: 2px solid #e2e8f0;
        border-bottom: none;
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .editor-btn {
        background: white;
        border: 1px solid #cbd5e1;
        border-radius: 6px;
        padding: 6px 12px;
        cursor: pointer;
        transition: all 0.2s;
        font-size: 14px;
    }

        .editor-btn:hover {
            background: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }

    .editor-textarea {
        border-radius: 0 0 10px 10px !important;
        border-top: none !important;
    }

    .sticky-sidebar {
        position: sticky;
        top: 20px;
    }

    @@media (max-width: 992px) {
        .sidebar-section {
            border-left: none;
            border-top: 1px solid #e2e8f0;
        }
    }
</style>

<!-- Page Header -->
<div class="page-header-custom">
    <h3>
        <i class="fas fa-pen-fancy"></i>
        Tạo Bài Viết Mới
    </h3>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-custom">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">
                    <i class="fas fa-home"></i> Dashboard
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "TinTuc")">Tin tức</a>
            </li>
            <li class="breadcrumb-item active">Thêm mới</li>
        </ol>
    </nav>
</div>

<!-- Main Content -->
<div class="content-card">
    @using (Html.BeginForm("Create", "TinTuc", FormMethod.Post, new { id = "newsForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="row g-0">
            <!-- Left Column - Main Form -->
            <div class="col-lg-8">
                <div class="form-section">
                    <!-- Thông tin cơ bản -->
                    <div class="section-title">
                        <i class="fas fa-heading"></i>
                        Thông tin cơ bản
                    </div>

                    <div class="mb-4">
                        <label class="form-label-custom">
                            <i class="fas fa-text-width"></i>
                            Tiêu đề bài viết
                            <span class="text-danger">*</span>
                        </label>
                        @Html.TextBoxFor(m => m.TieuDe, new
                        {
                            @class = "form-control form-control-custom",
                            @placeholder = "Nhập tiêu đề hấp dẫn cho bài viết...",
                            @required = "required",
                            @maxlength = "200",
                            @id = "TieuDe"
                        })
                        @Html.ValidationMessageFor(m => m.TieuDe, "", new { @class = "text-danger" })
                        <div class="char-counter">
                            <span id="titleCounter">0</span>/200 ký tự
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label-custom">
                            <i class="fas fa-align-left"></i>
                            Tóm tắt ngắn
                        </label>
                        @Html.TextAreaFor(m => m.TomTat, new
                        {
                            @class = "form-control form-control-custom",
                            @rows = "3",
                            @placeholder = "Viết tóm tắt ngắn gọn về nội dung bài viết...",
                            @maxlength = "500",
                            @id = "TomTat"
                        })
                        <div class="char-counter">
                            <span id="summaryCounter">0</span>/500 ký tự
                        </div>
                    </div>

                    <!-- Nội dung chi tiết -->
                    <div class="section-title mt-5">
                        <i class="fas fa-file-alt"></i>
                        Nội dung chi tiết
                    </div>

                    <div class="mb-4">
                        <label class="form-label-custom">
                            <i class="fas fa-edit"></i>
                            Nội dung bài viết
                            <span class="text-danger">*</span>
                        </label>
                        <div class="editor-toolbar">
                            <button type="button" class="editor-btn" onclick="formatText('bold')" title="Bold">
                                <i class="fas fa-bold"></i>
                            </button>
                            <button type="button" class="editor-btn" onclick="formatText('italic')" title="Italic">
                                <i class="fas fa-italic"></i>
                            </button>
                            <button type="button" class="editor-btn" onclick="formatText('underline')" title="Underline">
                                <i class="fas fa-underline"></i>
                            </button>
                            <button type="button" class="editor-btn" onclick="insertList()" title="Bullet List">
                                <i class="fas fa-list-ul"></i>
                            </button>
                            <button type="button" class="editor-btn" onclick="insertLink()" title="Insert Link">
                                <i class="fas fa-link"></i>
                            </button>
                            <button type="button" class="editor-btn" onclick="insertImage()" title="Insert Image">
                                <i class="fas fa-image"></i>
                            </button>
                        </div>
                        @Html.TextAreaFor(m => m.NoiDung, new
                        {
                            @class = "form-control form-control-custom editor-textarea",
                            @placeholder = "Viết nội dung chi tiết bài viết tại đây...",
                            @required = "required",
                            @id = "NoiDung"
                        })
                        @Html.ValidationMessageFor(m => m.NoiDung, "", new { @class = "text-danger" })
                        <div class="char-counter">
                            <span id="contentCounter">0</span> ký tự
                        </div>
                    </div>


                </div>
            </div>

            <!-- Right Column - Sidebar -->
            <div class="col-lg-4">
                <div class="sidebar-section">
                    <div class="sticky-sidebar">
                        <!-- Action Buttons -->
                        <button type="submit" class="btn btn-custom btn-success-custom mb-3" onclick="setStatus('Đăng')">
                            <i class="fas fa-check-circle"></i>
                            Xuất bản ngay
                        </button>

                        <button type="submit" class="btn btn-custom btn-primary-custom mb-3" onclick="setStatus('Nháp')">
                            <i class="fas fa-save"></i>
                            Lưu nháp
                        </button>

                        <a href="@Url.Action("Index", "TinTuc")" class="btn btn-custom btn-secondary-custom mb-4">
                            <i class="fas fa-arrow-left"></i>
                            Quay lại
                        </a>

                        <!-- Preview Image -->
                        <div class="info-card">
                            <h6>
                                <i class="fas fa-image"></i>
                                Hình ảnh đại diện
                            </h6>
                            <div class="preview-box" id="imagePreview">
                                <div class="preview-placeholder">
                                    <i class="fas fa-cloud-upload-alt"></i>
                                    <div>Chưa có ảnh</div>
                                </div>
                            </div>

                            <!-- Upload File Button -->
                            <label for="fileUpload" class="btn btn-custom btn-secondary-custom mb-3" style="cursor: pointer;">
                                <i class="fas fa-upload"></i>
                                Chọn ảnh từ máy
                            </label>
                            <input type="file" id="fileUpload" accept="image/*" style="display: none;" onchange="handleFileUpload(this)">

                            <!-- URL Input -->
                            <div class="mb-2">
                                <label class="form-label-custom" style="font-size: 13px;">Hoặc nhập URL ảnh:</label>
                                @Html.TextBoxFor(m => m.HinhAnh, new
                                {
                                    @class = "form-control form-control-custom",
                                    @placeholder = "https://example.com/image.jpg",
                                    @id = "HinhAnh",
                                    @onchange = "previewImageFromUrl(this.value)"
                                })
                            </div>
                            <small class="text-muted d-block">
                                <i class="fas fa-info-circle"></i> Kích thước khuyến nghị: 1200x630px
                            </small>
                        </div>

                        <!-- Hidden Status Field -->
                        @Html.HiddenFor(m => m.TrangThai, new { @id = "TrangThai", @value = "Nháp" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Character counters
        $(document).ready(function () {
            // Initialize counters
            updateCounter('TieuDe', 'titleCounter');
            updateCounter('TomTat', 'summaryCounter');
            updateCounter('NoiDung', 'contentCounter');

            // Attach event listeners
            $('#TieuDe').on('input', function () {
                updateCounter('TieuDe', 'titleCounter');
            });

            $('#TomTat').on('input', function () {
                updateCounter('TomTat', 'summaryCounter');
            });

            $('#NoiDung').on('input', function () {
                updateCounter('NoiDung', 'contentCounter');
            });
        });

        function updateCounter(inputId, counterId) {
            var length = $('#' + inputId).val().length;
            $('#' + counterId).text(length);
        }

        // Image preview from URL with CORS handling
        function previewImageFromUrl(url) {
            var preview = document.getElementById('imagePreview');
            if (url && url.trim() !== '') {
                // Create image element
                var img = new Image();

                img.onload = function () {
                    preview.innerHTML = '<img src="' + url + '" alt="Preview">';
                };

                img.onerror = function () {
                    // If direct loading fails, try using a proxy or show error
                    preview.innerHTML = '<div class="preview-placeholder text-warning"><i class="fas fa-exclamation-triangle"></i><div>Không thể tải ảnh từ URL này</div><small>Thử sử dụng upload ảnh từ máy</small></div>';
                };

                // Set crossOrigin before src to handle CORS
                img.crossOrigin = "anonymous";
                img.src = url;
            } else {
                preview.innerHTML = '<div class="preview-placeholder"><i class="fas fa-cloud-upload-alt"></i><div>Chưa có ảnh</div></div>';
            }
        }

        // Handle file upload from computer
        function handleFileUpload(input) {
            if (input.files && input.files[0]) {
                var file = input.files[0];

                // Validate file type
                if (!file.type.match('image.*')) {
                    alert('Vui lòng chọn file ảnh!');
                    return;
                }

                // Validate file size (max 5MB)
                if (file.size > 5 * 1024 * 1024) {
                    alert('Kích thước ảnh không được vượt quá 5MB!');
                    return;
                }

                var reader = new FileReader();

                reader.onload = function (e) {
                    // Display preview
                    var preview = document.getElementById('imagePreview');
                    preview.innerHTML = '<img src="' + e.target.result + '" alt="Preview">';

                    // Set the base64 data to the hidden input
                    $('#HinhAnh').val(e.target.result);
                };

                reader.readAsDataURL(file);
            }
        }

        // Set status before form submit
        function setStatus(status) {
            document.getElementById('TrangThai').value = status;
        }

        // Editor functions
        function formatText(command) {
            var textarea = document.getElementById('NoiDung');
            var start = textarea.selectionStart;
            var end = textarea.selectionEnd;
            var selectedText = textarea.value.substring(start, end);

            var formattedText = '';
            switch (command) {
                case 'bold':
                    formattedText = '**' + selectedText + '**';
                    break;
                case 'italic':
                    formattedText = '*' + selectedText + '*';
                    break;
                case 'underline':
                    formattedText = '<u>' + selectedText + '</u>';
                    break;
            }

            textarea.value = textarea.value.substring(0, start) + formattedText + textarea.value.substring(end);
            textarea.focus();
            textarea.selectionStart = textarea.selectionEnd = start + formattedText.length;
            updateCounter('NoiDung', 'contentCounter');
        }

        function insertList() {
            var textarea = document.getElementById('NoiDung');
            var text = '\n- Mục 1\n- Mục 2\n- Mục 3\n';
            insertAtCursor(textarea, text);
        }

        function insertLink() {
            var url = prompt('Nhập URL:');
            var text = prompt('Nhập text hiển thị:');
            if (url && text) {
                var textarea = document.getElementById('NoiDung');
                insertAtCursor(textarea, '[' + text + '](' + url + ')');
            }
        }

        function insertImage() {
            var url = prompt('Nhập URL hình ảnh:');
            if (url) {
                var textarea = document.getElementById('NoiDung');
                insertAtCursor(textarea, '\n![Mô tả ảnh](' + url + ')\n');
            }
        }

        function insertAtCursor(textarea, text) {
            var start = textarea.selectionStart;
            var end = textarea.selectionEnd;
            textarea.value = textarea.value.substring(0, start) + text + textarea.value.substring(end);
            textarea.focus();
            textarea.selectionStart = textarea.selectionEnd = start + text.length;
            updateCounter('NoiDung', 'contentCounter');
        }

        // Form validation
        $('#newsForm').on('submit', function (e) {
            var tieuDe = $('#TieuDe').val().trim();
            var noiDung = $('#NoiDung').val().trim();

            if (tieuDe === '') {
                alert('Vui lòng nhập tiêu đề bài viết!');
                $('#TieuDe').focus();
                e.preventDefault();
                return false;
            }

            if (noiDung === '') {
                alert('Vui lòng nhập nội dung bài viết!');
                $('#NoiDung').focus();
                e.preventDefault();
                return false;
            }

            return true;
        });
    </script>
}